Options -Indexes

<IfModule mod_rewrite.c>
RewriteEngine On
RewriteCond %{HTTPS} !=on
RewriteCond %{HTTP:X-Forwarded-Proto} !https [NC]
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

RewriteCond %{DOCUMENT_ROOT}/install/LOCK -f
RewriteRule ^install/ - [F]
</IfModule>

<FilesMatch "(^\\.|\\.(env|ini|log|sql|bak|zip|tar\\.gz|tgz)$|^config\\.sample\\.php$)">
  Require all denied
</FilesMatch>

RedirectMatch 404 ^/\.git

<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"
  Header set X-Frame-Options "DENY"
  Header set Content-Security-Policy "default-src 'self'; img-src 'self' data: https://www.google.com https://www.gstatic.com; style-src 'self' 'unsafe-inline' https://www.gstatic.com; script-src 'self' 'unsafe-inline' https://www.google.com https://www.gstatic.com; connect-src 'self' https://www.google.com https://www.gstatic.com; frame-src https://www.google.com; object-src 'none'; base-uri 'self'; frame-ancestors 'none'"
</IfModule>
